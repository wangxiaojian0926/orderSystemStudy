<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wxj.repository.MenuRepository">
    <select id="findAll" resultType="com.wxj.entity.Menu">
        select * from t_menu limit #{param1},#{param2}
    </select>
    <select id="count" resultType="int">
        select count(id) from t_menu
    </select>
    <select id="findById" parameterType="long" resultType="com.wxj.entity.Menu">
        select * from t_menu where id = #{id}
    </select>
    <insert id="save" parameterType="com.wxj.entity.Menu">
        insert into t_menu(name,price,flavor) values(#{name},#{price},#{flavor})
    </insert>
    <update id="update" parameterType="com.wxj.entity.Menu">
        update t_menu set name = #{name},price = #{price},flavor = #{flavor}
        where id = #{id}
    </update>
    <delete id="deleteById" parameterType="long">
        delete from t_menu where id = #{id}
    </delete>
</mapper>